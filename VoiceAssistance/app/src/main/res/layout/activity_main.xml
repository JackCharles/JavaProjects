<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.zjee.voiceassistant.MainActivity">

    <TextView
            android:text="@string/log_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textStyle="bold"
            android:textAllCaps="false" android:fontFamily="serif" android:textSize="18sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/bg"
            android:id="@+id/logText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/start_button"
            android:scrollbars="vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:autoLink="all"/>
    <Button
            android:layout_height="100dp"
            android:background="@drawable/aiui_button_selector"
            android:id="@+id/start_button"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_width="100dp"/>
    <TextView
            android:text="@string/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" tools:text="@string/tips" android:fontFamily="serif"
            android:textColor="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>
